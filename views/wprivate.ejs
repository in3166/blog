          <div class="card-body">
            <div class="pl-lg-3">
              <ul class="list-unstyled">
                <% for (let i = (page *countList)-countList; i < (page * countList) ; i++) { %>
                <% if(i >= totalCount){ %>
                <% i++; %>
                <% }else{ %>
                <% let data = post[i]; %>

                <li class=" list-item list-group-item-action"><a id="cp<%=  post[i].id%>" class=""
