            <ul class="pager list-unstyled">
              <% if(postnum == 1){ %>
              <li class="previousArrow" style="float: left;">
                <a class="disabled">
                  <i class="fas fa-arrow-alt-circle-left fa-lg"></i></a>
              </li>
              <% } else { %>
              <li class="previousArrow" style="float: left;">
                <a href="/private/board/<%= boardnum %>/<%= page %>/<%= --postnum %>">
                  <i class="fas fa-arrow-alt-circle-left fa-lg"></i></a>
              </li>
              <% ++postnum %>
